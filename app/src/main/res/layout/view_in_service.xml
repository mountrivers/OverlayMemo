<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/length"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#77FFFFFF"
    android:orientation="vertical"
    android:padding="0dp"
    android:paddingLeft="0dp"
    android:paddingTop="0dp"
    android:paddingRight="0dp"
    android:paddingBottom="0dp"
    app:layout_constraintHeight_percent="0.5"
    app:layout_constraintWidth_percent="0.3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="#77FFFFFF" />

        <ImageButton
            android:id="@+id/button_zooming_minus"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="#00FFFFFF"
            android:padding="0dp"
            android:src="@drawable/ic_minusbutton"
            tools:ignore="VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/button_zooming_plus"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="0"
            android:background="#00FFFFFF"
            android:padding="0dp"
            android:src="@drawable/ic_plusbutton"
            android:visibility="gone"
            tools:ignore="VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/button_paste"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="0"
            android:background="#00FFFFFF"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_pastbutton"
            tools:ignore="VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/button_save"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="#00FFFFFF"
            android:padding="0dp"
            android:src="@drawable/ic_savebutton"
            tools:ignore="VectorDrawableCompat" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button_exit"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="#00FFFFFF"
                android:padding="0dp"
                android:src="@drawable/ic_exitbutton"
                android:visibility="visible"
                tools:ignore="VectorDrawableCompat" />
        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/textView"
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_weight="1"
        android:saveEnabled="true"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:text="Hello World!"
        android:textColor="@color/colorPrimaryDark" />

</LinearLayout>